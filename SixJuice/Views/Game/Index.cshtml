
@{
    ViewBag.Title = "SixJuice - " + ViewBag.RoomCode + " - " + ViewBag.PlayerName;
    Layout = "~/Views/Shared/_SJLayout.cshtml";
}

<div class="gameboard">
    <div id="top" class="boardrow">
        <span id="drawpile" class="deck"></span>
        <span id="table" class="cardBar"> </span>
    </div>
    <div id="players">
        <div id="ThisPlayer" class="boardrow">
            <span id="pointCardPile" class="deck"></span>
            <span id="normalCardPile" class="deck normalCardPile"></span>
            <span id="hand" class="cardBar hand"></span>
            <span id="kings" class="kings">

            </span>
        </div>
    </div>
    <div id="buttons">

    </div>
</div>

<div id="wait" class="wide tall overlay">
    <div class="vert10"></div>
    <div>
        <span class="sidepad"></span>
        <span class="sidepadsandwich overlayContent vert80">
            <span class="medText spiv">Waiting for players:</span>
            <span id="waitList"></span>

        </span>
    </div>
</div>

<script src="~/Scripts/game.js"></script>
<script type="text/javascript">
    getRoomCode = function () {
        return "@ViewBag.RoomCode";
    }
    getPlayerName = function () {
        return "@ViewBag.PlayerName";
    }
</script>

